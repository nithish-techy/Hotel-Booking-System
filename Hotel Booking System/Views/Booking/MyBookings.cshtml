@model List<Hotel_Booking_System.Models.Booking>

<h2>My Bookings</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Room ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Check-In</th>
                <th>Check-Out</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.RoomID</td>
                    <td>@booking.Name</td>
                    <td>@booking.Email</td>
                    <td>@booking.Phone</td>
                    <td>@booking.CheckInDate.ToShortDateString()</td>
                    <td>@booking.CheckOutDate.ToShortDateString()</td>
                    <td>@booking.Status</td>
                    <td>
                        <a href="@Url.Action("Edit", "Booking", new { id = booking.BookingID })">Edit</a> |
                        <a href="@Url.Action("Delete", "Booking", new { id = booking.BookingID })" onclick="return confirm('Are you sure?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No bookings found.</p>
}
