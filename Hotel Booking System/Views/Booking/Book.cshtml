@model Hotel_Booking_System.Models.Booking

@{
    ViewBag.Title = "Book Room";
}

<h2>Book Room</h2>

@using (Html.BeginForm("Book", "Booking", FormMethod.Post))
{
    @Html.HiddenFor(m => m.RoomID, new { Value = ViewBag.RoomID })

    <div class="form-group">
        <label>Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", required = "required" })
    </div>

    <div class="form-group">
        <label>Phone</label>
        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        <label>Check-In Date</label>
        @Html.TextBoxFor(m => m.CheckInDate, new { @class = "form-control", type = "date", required = "required" })
    </div>

    <div class="form-group">
        <label>Check-Out Date</label>
        @Html.TextBoxFor(m => m.CheckOutDate, new { @class = "form-control", type = "date", required = "required" })
    </div>

    <button type="submit" class="btn btn-primary">Confirm Booking</button>
}

@if (TempData["BookingMessage"] != null)
{
    <div class="alert alert-info">
        @TempData["BookingMessage"]
    </div>
}
