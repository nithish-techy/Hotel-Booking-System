<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Hotel Booking System</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Hotel Booking System</a>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })</li>
                <li class="nav-item">@Html.ActionLink("Available Rooms", "Index", "Rooms", null, new { @class = "nav-link" })</li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()  <!-- ✅ This ensures the child views will be rendered here -->
    </div>

    <footer class="text-center">
        <p>© @DateTime.Now.Year - Hotel Booking System</p>
    </footer>
</body>
</html>
